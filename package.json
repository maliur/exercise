{
  "name": "exercise",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently -c \"auto\" \"npm:build:watch\" \"npm:serve\" \"npm:postcss\"",
    "build": "NODE_ENV=production tsc && postcss --use autoprefixer -o dist/main.css src/*.css",
    "build:watch": "tsc -w",
    "lint": "eslint . --ext .js,.ts",
    "postcss": "postcss --use autoprefixer -o dist/main.css src/*.css -w",
    "prettier": "prettier --write '**/*.{ts,json,md}'",
    "serve": "live-server --watch=dist,index.html,dist/main.css",
    "type-check": "tsc --noEmit"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "volta": {
    "node": "19.4.0"
  }
}
